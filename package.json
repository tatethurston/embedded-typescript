{
  "private": true,
  "scripts": {
    "lint": "yarn typecheck && prettier --check . && prettier-package-json --list-different '{,example/,packages/**/}package.json' && eslint .",
    "lint:fix": "prettier --write . && prettier-package-json --write '{,example/,packages/**/}package.json' && eslint --fix .",
    "prepare": "husky install",
    "test": "yarn jest 'packages/*' && yarn workspace embedded-typescript run build && (cd example && yarn clean && yarn build && yarn jest)",
    "test:regen": "yarn jest -u 'packages/*' && yarn workspace embedded-typescript run build && (cd example && yarn clean && yarn build && yarn jest)",
    "typecheck": "yarn workspaces run tsc --noEmit"
  },
  "types": "dist",
  "workspaces": [
    "packages/*",
    "example"
  ],
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "babel-jest": "^29.0.3",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "prettier": "^2.7.1",
    "prettier-package-json": "^2.6.4",
    "typescript": "^4.8.3"
  }
}
